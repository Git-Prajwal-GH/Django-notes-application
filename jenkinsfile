pipeline{
    agent any
    
    stages{
        stage('code'){
            steps{
                echo "code cloning"
                git url: 'https://github.com/Git-Prajwal-GH/Django-notes-application.git', branch:'main'
            }
        }
        stage('Image Build'){
            steps{
                echo "Docker image building"
                sh "whoami" // ubuntu
                sh "docker build -t notes-app:latest ." // build the docker image
            }
        }
        stage("Push to DockerHub"){
            steps{
                echo "Docker image pushing to DockerHub"
                // need to describe credentials for push the image
                withCredentials([usernamePassword('credentialsId':"dockerhub-cred",passwordVariable:"dockerHubPass",usernameVariable:"dockerHubUser")]){
                // Login to DockerHub-  .DockerHubId.        .DockerHub tokenpass.
                sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPass} "
                // Tag the image
                sh "docker image tag notes-app:latest ${env.dockerHubUser}/notes-app:latest"
                // Push the image
                sh "docker push ${env.dockerHubUser}/notes-app:latest"
                }
            }
        }
        stage("Deploy"){
            steps{
                echo "This is deploying the code"
                sh "docker run --name c1 -p 8000:8000 notes-app:latest"  // run the docker container
            }
        }
    }
}